<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_properties_description">
        <t t-if="line.has_propertis and line.product_id.has_product_properties">
            <div class="o_bulgaria_table pbi_avoid">
                <t t-foreach="line.env['product.properties.type'].get_product_properties_print(line, line.product_id, properties_print, lot_ids)" t-as="description">
                    <div class="o_bulgaria_row pbi_avoid">
                        <div class="o_bulgaria_custom_cell pbi_avoid">
                            <span t-esc="description['label']"/>
                        </div>
                        <div class="o_bulgaria_cell pbi_avoid">
                            <span t-esc="description['value']['value']"/>
                            <span t-1f="description['value']['attrs']" t-esc="description['value']['attrs']"/>
                            <span t-1f="description['value']['image']" t-esc="description['value']['image']"/>
                        </div>
                    </div>
                </t>
            </div>
        </t>
        <t t-else="">
            <span t-field="line.name"/>
        </t>
    </template>
    <template id="product_properties_description_force_print">
        <t t-if="line.has_propertis and line.product_id.has_product_properties">
            <div class="o_bulgaria_table">
                <t t-foreach="line.env['product.properties.type'].with_context(line._context, force_print=True).get_product_properties_print(line, line.product_id, properties_print, lot_ids)" t-as="description">
                    <div class="o_bulgaria_row pbi_avoid">
                        <div class="o_bulgaria_custom_cell">
                            <span t-esc="description['label']"/>
                        </div>
                        <div class="o_bulgaria_cell">
                            <span t-esc="description['value']['value']"/>
                            <span t-1f="description['value']['attrs']" t-esc="description['value']['attrs']"/>
                            <span t-1f="description['value']['image']" t-esc="description['value']['image']"/>
                        </div>
                    </div>
                </t>
            </div>
        </t>
        <t t-else="">
            <span t-field="line.name"/>
        </t>
    </template>
</odoo>