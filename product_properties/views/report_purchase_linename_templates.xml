<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="linename">
        <div class="o_theming_table">
            <div class="o_theming_row">
                <div class="o_theming_custom_cell">
                    Code:
                </div>
                <div class="o_theming_cell">
                    <span t-esc="line.product_id.default_code"/>
                </div>
                <div class="o_theming_custom_cell">
                    Desc:
                </div>
                <div class="o_theming_cell">
                    <t t-if="line.order_id.use_product_description">
                        <span t-esc="line.name"/>
                    </t>
                    <t t-else="">
                        <span t-esc="line.product_id.name"/>
                    </t>
                </div>
            </div>
            <div t-if="line.product_id.description_short or line.product_id.product_tmpl_id.description_short" class="o_theming_row">
                <div class="o_theming_custom_cell">
                    S.Desc:
                </div>
                <div class="o_theming_merge_cell">
                    <t t-if="line.product_id.description_short">
                        <span t-esc="line.product_id.description_short"/>
                    </t>
                    <t t-else="">
                        <span t-esc="line.product_id.product_tmpl_id.description_short"/>
                    </t>
                </div>
            </div>
            <div t-if="line.manufacturer_id" class="o_theming_row">
                <div t-if="line.manufacturer_id" class="o_theming_custom_cell">
                    Manf:
                </div>
                <div class="o_theming_cell">
                    <span t-esc="line.manufacturer_id.manufacturer.display_name"/>
                </div>
                <div t-if="line.manufacturer_id.manufacturer_pref" class="o_theming_custom_cell">
                    MPN:
                </div>
                <div t-if="line.manufacturer_id.manufacturer_pref" class="o_theming_cell">
                    <span t-esc="line.manufacturer_id.manufacturer_pref"/>
                </div>
            </div>
            <div t-if="line.supplierinfo_id or (line.manufacturer_id and line.manufacturer_id.packaging_ids)" class="o_theming_row">
                <div t-if="line.supplierinfo_id and line.supplierinfo_id.product_code" class="o_theming_custom_cell">
                    SKU:
                </div>
                <div t-if="line.supplierinfo_id and line.supplierinfo_id.product_code" class="o_theming_cell">
                    <span t-esc="line.supplierinfo_id.product_code"/>
                </div>
                <div t-if="line.manufacturer_id and line.manufacturer_id.reelpackaging_ids" class="o_theming_custom_cell">
                    PU:
                </div>
                <div t-if="line.manufacturer_id and line.manufacturer_id.reelpackaging_ids" class="o_theming_cell">
                    <span t-if="line.manufacturer_id" t-esc="line.manufacturer_id.reelpackaging_ids[0].name"/>
                </div>
            </div>
        </div>
    </template>
</odoo>