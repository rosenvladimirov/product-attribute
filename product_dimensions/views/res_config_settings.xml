<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.dimension</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!--/div[@class='row mt16 o_settings_container']-->
            <xpath expr="//h2[contains(text(),'Products')]/div[0]" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <label for="show_imperial_measures" class="col-md-3 o_light_label"/>
                            <field name="show_imperial_measures"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
