<?xml version="1.0"?>
<odoo>

    <record id="product_variant_easy_edit_specifications_view" model="ir.ui.view">
        <field name="name">product.product.view.form.specifications.easy</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="specifications"/>
            </field>
        </field>
    </record>
    <record id="product_normal_form_specifications_view" model="ir.ui.view">
        <field name="name">product.product.form.specifications</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="specifications"/>
            </field>
        </field>
    </record>

</odoo>
